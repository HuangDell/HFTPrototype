{  
    "version": "2.0.0",  
    "tasks": [  
        {  
            "label": "build-debug",  
            "type": "shell",  
            "command": "make debug",  
            "group": {  
                "kind": "build",  
                "isDefault": true  
            },  
            "problemMatcher": {  
                "owner": "cpp",  
                "fileLocation": ["relative", "${workspaceFolder}"],  
                "pattern": {  
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",  
                    "file": 1,  
                    "line": 2,  
                    "column": 3,  
                    "severity": 4,  
                    "message": 5  
                }  
            }  
        }, 
        {
            "label": "build-release",  
            "type": "shell",  
            "command": "make",  
            "group": {  
                "kind": "build",  
                "isDefault": true  
            },  
            "problemMatcher": {  
                "owner": "cpp",  
                "fileLocation": ["relative", "${workspaceFolder}"],  
                "pattern": {  
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",  
                    "file": 1,  
                    "line": 2,  
                    "column": 3,  
                    "severity": 4,  
                    "message": 5  
                }  
            }  

        }
    ]  
}  